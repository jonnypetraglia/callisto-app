<!-- This file contains resource definitions for style.  A style is
     a collection of named values that can be applied as a group.  Here,
     we are using a style to define a common set of XML attributes that
     will be used in multiple tags. -->

<resources>
    <style name="Default" parent="@android:style/Theme">
        <item name="android:moreIcon">@drawable/ic_action_more</item>
        <item name="android:panelFullBackground">@color/kuler_4</item>
        <item name="android:buttonStyle">@style/btnStyleBreakerBay</item>
        <item name="android:imageButtonStyle">@style/imgButton</item>
        <item name="android:radioButtonStyle">@style/radio</item>
        <item name="android:checkboxStyle">@style/chxbox</item>
        <item name="android:progressBarStyleHorizontal">@style/pgress</item>
        <!--<item name="android:dropDownSpinnerStyle">@style/ddl</item>-->
        <item name="android:cacheColorHint">#ff45ab35</item>
    </style>

    <style name="Default.New" parent="Default">
        <item name="android:windowActionBar">true</item>
        <item name="android:actionBarStyle">@android:style/Widget.Holo.ActionBar</item>
        <item name="android:actionOverflowButtonStyle">@style/MyActionButtonOverflow</item>
        <item name="android:actionDropDownStyle">@style/MyActionBar</item>
    </style>

    <style name="MyActionButtonOverflow" >
        <item name="android:src">@drawable/ic_action_list</item>
        <item name="android:padding">10dp</item>
    </style>
    <style name="MyActionBar" >
        <item name="android:padding">0dip</item>
        <item name="android:layout_margin">0dip</item>
    </style>

    <style name="ddl" parent="@android:style/Widget.Spinner">
        <item name="android:background">@drawable/blue_button</item>
        <item name="android:panelColorBackground">#ffffffff</item>
    </style>

    <style name="pgress" parent="@android:style/Widget.ProgressBar">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/progress_horizontal_holo_light</item>
    </style>

    <style name="chxbox" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/btn_check_holo_light</item>
    </style>

    <style name="radio" parent="@android:style/Widget.CompoundButton.RadioButton">
        <item name="android:button">@drawable/blue_radio</item>
    </style>


    <style name="btnStyleBreakerBay" parent="@android:style/Widget.Button">
        <item name="android:gravity">center</item>
        <!--
        <item name="android:shadowColor">@color/kuler_1</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">0.5</item>
        -->
        <item name="android:background">@drawable/blue_button</item>
        <item name="android:padding">15dip</item>
    </style>

    <style name="imgButton" parent="btnStyleBreakerBay">
        <item name="android:padding">5dip</item>
    </style>


    <style name="NickList" parent="android:style/Theme.Dialog">
        <item name="android:windowBackground">@color/kuler_1</item>
        <item name="android:textColor">@color/kuler_5</item>
    </style>

    <style name="ActionButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">@style/TextAppearance.ActionButton</item>

    </style>

    <style name="TextAppearance" parent="android:TextAppearance">
    </style>

    <style name="TextAppearance.ActionButton">
        <item name="android:textStyle">italic</item>
    </style>

    <style name="PreferencesTheme"  parent="android:style/Theme.Light">
        <item name="android:windowBackground">@color/backClr</item>
    </style>

</resources>

